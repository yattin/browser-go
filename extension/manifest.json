{
  "manifest_version": 3,
  "name": "Browser-Go V2 Extension",
  "version": "2.0.0",
  "description": "Enhanced Chrome extension for Browser-Go V2 architecture with multi-device support",
  "permissions": [
    "tabs",
    "activeTab",
    "debugger",
    "storage"
  ],
  "host_permissions": [
    "http://localhost/*",
    "https://localhost/*",
    "ws://localhost/*",
    "wss://localhost/*"
  ],
  "background": {
    "service_worker": "background-v2.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Browser-Go V2 Extension",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}